
<section class="space-y-6">
  <div class="bg-slate-900/60 border border-slate-800 rounded-2xl p-4 md:p-6">
    <h1 class="text-xl font-semibold mb-2">Dashboard</h1>
    <p class="text-sm text-slate-300 mb-4">
      Create short links, track clicks, and manage your URLs.
    </p>

    <form id="create-link-form" class="space-y-3">
      <div class="grid md:grid-cols-2 gap-3">
        <div>
          <label class="block text-xs font-medium text-slate-300 mb-1">
            Target URL <span class="text-red-400">*</span>
          </label>
          <input
            type="url"
            name="targetUrl"
            required
            placeholder="https://example.com/very/long/path"
            class="w-full px-3 py-2 rounded-lg bg-slate-950/60 border border-slate-700 text-sm focus:outline-none focus:ring focus:ring-indigo-500/40"
          />
        </div>
        <div>
          <label class="block text-xs font-medium text-slate-300 mb-1">
            Custom code (optional, 6â€“8 letters/digits)
          </label>
          <input
            type="text"
            name="code"
            maxlength="8"
            placeholder="docs, promo01, ab12CD"
            class="w-full px-3 py-2 rounded-lg bg-slate-950/60 border border-slate-700 text-sm focus:outline-none focus:ring focus:ring-indigo-500/40"
          />
        </div>
      </div>

      <div class="flex items-center gap-3">
        <button
          type="submit"
          class="inline-flex items-center px-4 py-2 rounded-lg bg-indigo-500 hover:bg-indigo-400 disabled:opacity-60 text-sm font-medium transition"
        >
          <span id="create-link-button-text">Create link</span>
          <span id="create-link-spinner" class="hidden ml-2 text-xs">
            ...
          </span>
        </button>
        <p id="form-message" class="text-sm"></p>
      </div>
    </form>
  </div>

  <div class="bg-slate-900/60 border border-slate-800 rounded-2xl p-4 md:p-6">
    <div class="flex items-center justify-between mb-3">
      <h2 class="text-lg font-semibold">All links</h2>
      <p class="text-xs text-slate-400">
        Total: <%= links.length %>
      </p>
    </div>

    <% if (links.length === 0) { %>
      <p class="text-sm text-slate-400">
        No links yet. Create your first short link using the form above.
      </p>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="min-w-full text-xs md:text-sm border-collapse">
          <thead>
            <tr class="border-b border-slate-800 text-slate-300">
              <th class="text-left py-2 pr-4">Code</th>
              <th class="text-left py-2 pr-4">Target URL</th>
              <th class="text-left py-2 pr-4">Total clicks</th>
              <th class="text-left py-2 pr-4">Last clicked</th>
              <th class="text-left py-2 pr-4">Created</th>
              <th class="text-left py-2 pr-4">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% links.forEach(link => { %>
              <tr class="border-b border-slate-900/60 hover:bg-slate-900/60">
                <td class="py-2 pr-4 align-top">
                  <div class="flex items-center gap-1">
                    <a
                      href="/<%= link.code %>"
                      class="text-indigo-400 hover:underline break-all"
                      target="_blank"
                    >
                      <%= link.code %>
                    </a>
                    <button
                      type="button"
                      class="copy-button text-[10px] px-1.5 py-0.5 border border-slate-600 rounded-md ml-1"
                      data-copy="<%= baseUrl %>/<%= link.code %>"
                    >
                      Copy
                    </button>
                  </div>
                  <div class="text-[10px] text-slate-400">
                    <%= baseUrl %>/<%= link.code %>
                  </div>
                </td>
                <td class="py-2 pr-4 align-top max-w-xs">
                  <div class="truncate" title="<%= link.target_url %>">
                    <%= link.target_url %>
                  </div>
                </td>
                <td class="py-2 pr-4 align-top">
                  <%= link.total_clicks %>
                </td>
                <td class="py-2 pr-4 align-top">
                  <%= link.last_clicked_at ? link.last_clicked_at.toLocaleString("en-IN", { timeZone: "Asia/Kolkata" }) : 'Never' %>
                </td>
                <td class="py-2 pr-4 align-top">
                  <%= link.created_at.toLocaleString("en-IN", { timeZone: "Asia/Kolkata" }) %>
                </td>
                <td class="py-2 pr-4 align-top">
                  <div class="flex flex-wrap gap-1">
                    <a
                      href="/code/<%= link.code %>"
                      class="px-2 py-1 rounded-lg border border-slate-600 text-[11px]"
                    >
                      Stats
                    </a>
                    <button
                      type="button"
                      class="delete-button px-2 py-1 rounded-lg border border-red-500/70 text-red-300 text-[11px]"
                      data-code="<%= link.code %>"
                    >
                      Delete
                    </button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</section>
